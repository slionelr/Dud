extends layout

block content
    br
    div#timer(class="clock")
    div(ng-controller="DudController").clock
        div.wrapper
            div.row
                knob(knob-data="interval", knob-options="options('interval')")
            div.row
                button.btn.btn-primary(ng-click="update()")
                    | Update
            div.row
                span.label.label-default(id="startTimer", ng-bind="startTimer")
            div.row
                span.label.label-default(id="endTimer", ng-bind="endTimer")

